{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020"
        ],
        "module": "node16",
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "declaration": true,
        "declarationMap": true,
        "types": [
            "@types/node"
        ]
    },
    "include": [
        "node_modules"
    ]
}